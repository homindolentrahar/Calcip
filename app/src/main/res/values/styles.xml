<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewFont</item>
        <item name="android:editTextStyle">@style/EditTextFont</item>
        <item name="android:buttonStyle">@style/ButtonFont</item>
    </style>

    <style name="TextViewFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextFont" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonFont" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppTitleStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppDescriptionStyle" parent="TextAppTitleStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputEditStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextNetmaskResult">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextResultTitle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextResultSubtitle" parent="TextResultTitle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextResultThirdTitle" parent="TextResultTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextResultPrimary">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextResultNormal" parent="TextResultPrimary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextResultColumnTitle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemTitle" parent="TextResultThirdTitle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="indicatorName">LineScaleIndicator</item>
        <item name="indicatorColor">@color/colorAccent</item>
    </style>

</resources>
